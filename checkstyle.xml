<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- i. Classes should be written in Pascal case -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- ii. Variables, methods, and URLs should be written in camel case -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- iii. Files, including view files, should be written in snake case -->
        <!-- This rule is not supported by Checkstyle -->

        <!-- iv. Packages should be written in lowercase, with each word separated by dots (.) -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        </module>

        <!-- v. Packages should include the name of your project and your name -->
        <module name="PackageName">
            <property name="format" value="^.*\.colette.bellard.alien.dating.site\..*$"/>
        </module>
    </module>
</module>